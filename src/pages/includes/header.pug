mixin siteListItem(href="#", text="ссылка", isActive = false)
    - var className = "site-list__item";
    if (isActive)
        li(class= className +' ' + className+'--active')
            a(href=href)= text
    else
        li(class=className)
            a(href=href)= text

            
header.page-header
    a.page-header__logo
        img(src="/img/logotype-mobile.svg", width="226" height="30" alt="Барбершоп «Бородинский»").page-header__logo-image
    nav.main-nav
        button(type="button").main-nav__togle
        .main-nav__wraper
            ul.main-nav__list.site-list
                +siteListItem('/index.html', 'Главная', true)
                +siteListItem('/works.html', 'Наши работы')
                +siteListItem('/order.html', 'Записаться')
                +siteListItem('#', 'Контакты')
                +siteListItem('#', 'HTML Academy')
            ul.main-nav__list.user-list
                li.main-nav__user-item
                    a(href="#").main-nav__login Вход